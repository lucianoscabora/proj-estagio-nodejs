<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Checklist</title>
   <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link href="/assets/css/chosen.min.css" rel="stylesheet" type="text/css" />

  
  <style>
     h2, th, tr, td {
      text-align: center;
    }

    #btadd {
      position: absolute;
      top: 138;
      left: 1144;
    }
    
    
/* Add a black background color to the top navigation */
.topnav {
  background-color: #333;
  overflow: hidden;
}

/* Style the links inside the navigation bar */
.topnav a {
  float: left;
  color: #f2f2f2;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}

/* Change the color of links on hover */
.topnav a:hover {
  background-color: #ddd;
  color: black;
}

/* Add a color to the active/current link */
.topnav a.active {
  background-color: #4CAF50;
  color: white;
}
</style>
</head>
<body>
  
<div class="topnav">
<a class="active" href="/home">Home</a>
<a href="/registrar">Registrar-se</a>
<a href="/cad_origem">Nova origem</a>
<a href="/cad_ug">Nova UG</a>
<a href="/cad_ugb">Nova UGB</a>
<a href="/cad_hierarquia">Nova Hierarquia</a>
<a href="/cadastro_evidencias"> Evidencias</a>
<a href="/cadastro_meios"> Meios</a>
</div>

  
  <div class="container">
    <h3 class="card-header text-center font-weight-bold text-uppercase py-4">Checklist</h3>
    <button class="btn btn-success" data-toggle="modal" id="btadd" data-target="#myModalAdd">Adicionar</button>
           <table class="table table-bordered" id="mytable">
      <thead>
        <tr>
          <th>ID</th>
          <th>UG</th>
          <th>Meios</th>
          <th>Evidências</th>
          <th>Como auditar</th>
          <th>Amostragem minima</th>
          <th>Pontuação</th>
          <th>Ponts fortes</th>
          <th>Falhas</th>
          <th>Riscos</th>
          <th>Data</th>
          <th>Ações</th>
          <tfoot>
      <tr>
        <td>Pontuação UG:</td>
        <td>a</td>
      </tr>
  </tfoot>
        </tr>
      </thead>
      <tbody>
         {{#each checklist}}
        <tr>
          <td>{{ id_check }}</td>
          <td>{{ nome_ug }}</td>
          <td>{{descricao}} </td>
          <td>{{ evidencias }}</td>
          <td>{{ como_auditar }}</td>
          <td>{{ amos_min }}</td>
          <td>{{ nota_item }}</td>
          <td>{{ ponto_forte }}</td>
          <td>{{ falhas }}</td>
          <td>{{ riscos }}</td>
          <td>{{ data_chk }}</td>
  
          <td>
            
            <a href="javascript:void(0);" class="edit" data-id_evid="{{ id_evid }}" data-descr_evid="{{ descr_evid }}" >Editar</a>
            <a href="javascript:void(0);" class="delete" data-id_evid="{{ id_evid }}">Deletar</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
 
    <!-- Modal adicionar checklist-->
  <form action="/cad_checklist" method="post">
  <div class="modal" id="myModalAdd" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Cadastrar checklist</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
             <div class="modal-body">
                 
              <div class="form-group">
               <div><label>Meios: </label></div>
            <select id="meios" name="meios" class="chosen-select">
              {{#each meios}}
              <option value="{{ id_meio }}" >{{ descricao }}</option>
              {{/each}}
            </select>
                </div>

               <div class="form-group">
                    <label>Pontuação - Linha:</label>
                   <input type="text" name="pontuacao" class="form-control" placeholder="10..0...15.." required>
               </div>

               <div class="form-group">
                    <label>Evidencias:</label>
                   <select id="evid" name="evid" class="chosen-select">
              {{#each evidencias}}
              <option value="{{ id_evid }}" >{{ descr_evid }}</option>
              {{/each}}
            </select>
               </div>

               <div class="form-group">
                    <label>Como auditar:</label>
                   <input type="text" name="como_auditar" class="form-control" placeholder="..." required>
               </div>

               <div class="form-group">
                    <label>Amostragem mínima:</label>
                   <input type="text" name="amos_min" class="form-control" placeholder="..." required>
               </div>

               <div class="form-group">
                    <label>Nota do item: </label>
                   <input type="text" name="nota_item" class="form-control" placeholder="..." required>
               </div>

               <div class="form-group">
                    <label>Pontos fortes: </label>
                   <input type="text" name="ponto_forte" class="form-control" placeholder=" ">
               </div>

               <div class="form-group">
                    <label>Falhas: </label>
                   <input type="text" name="falhas" class="form-control" placeholder=" ">
               </div>

               <div class="form-group">
                    <label>Riscos: </label>
                   <input type="text" name="riscos" class="form-control" placeholder=" ">
               </div>

               <div class="form-group">
                    <label>Data: </label>
                   <input type="date" name="data" class="form-control" placeholder=" ">
               </div>




             </div>
             <div class="modal-footer">
               <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
               <button type="submit" class="btn btn-primary">Salvar</button>
             </div>
           </div>
         </div>
        </div>
     </form>
 
     <!-- Editar evidência-->
<form action="/edit_ori" method="post">
  <div class="modal" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Alterar cadastro</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
          </div>
            <div class="modal-body">
              <div class="form-group">
                  <input type="text" name="descr_evid" class="form-control descr_evid" placeholder="Descrição evidência" required>
              </div>
              <div class="form-group">
                  <select id="evid" name="evid" class="chosen-select">
              {{#each evidencias}}
              <option value="{{ id_evid }}" >{{ id_evid }}</option>
              {{/each}}
            </select>
              </div>
            </div>
            <div class="modal-footer">
              <input type="hidden" name="id_evid" class="id_evid">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
              <button type="submit" class="btn btn-primary">Editar</button>
            </div>
          </div>
        </div>
       </div>
  </form>


<!-- Deletar Pendencias-->
<form id="add-row-form" action="/del_ori" method="post">
  <div class="modal" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="myModalLabel">Deletar</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">
        <strong>Tem certeza que deseja apagar este registro?</strong>
        </div>
        <div class="modal-footer">
          <input type="hidden" name="id_evid" class="form-control id_evid2" required>
          <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
          <button type="submit" class="btn btn-success">Deletar</button>
        </div>
      </div>
    </div>
  </div>
</form>

<!-- Alerta Erros -->
<div class="modal" id="ErroModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="myModalLabel">Mensagem do Sistema</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">
        <strong id="MensagemErro">{{ erro }}</strong>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-warning" data-dismiss="modal">Fechar</button>
      </div>
    </div>
  </div>
</div>
 
<script src="/assets/js/jquery.min.js" type="text/javascript"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
<script src="/assets/js/jquery.filtertable.min.js" type="text/javascript"></script>
<script src="/assets/js/chosen.jquery.min.js" type="text/javascript"></script>
<script src="/assets/js/sorttable.js" type="text/javascript"></script>

<script>
  
    $('#mytable').filterTable({ minRows: 0 });
 $(".chosen-select").chosen({width: "100%"}); 

    $(document).ready(function(){
        {{#if erro}}
        ${('ErroModal')}.modal('show');
        {{/if}}


       //Mostrar dados no modal edit     
       $('#mytable').on('click','.edit',function(){
       var id_evid = $(this).data('id_evid');
       var descr_evid = $(this).data('descr_evid');
       $('#EditModal').modal('show');
       $('.descr_evid').val(descr_evid);
       $('.id_evid').val(id_evid);
     });
       
       //Mostrar dados no modal delete
       $('#mytable').on('click','.delete',function(){
       var id_evid = $(this).data('id_evid');
       $('#DeleteModal').modal('show');
       $('.id_evid2').val(id_evid);
     });
});


</script>

</body>
</html>