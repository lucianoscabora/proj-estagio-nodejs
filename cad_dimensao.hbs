<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Cadastro de dimensão</title>
 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

  <style>
    h2, th, tr, td {
      text-align: center;
    }

    #btadd {
      position: absolute;
      top: 60;
      left: 944;
    }

/* Add a black background color to the top navigation */
.topnav {
  background-color: #333;
  overflow: hidden;
}

/* Style the links inside the navigation bar */
.topnav a {
  float: left;
  color: #f2f2f2;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}

/* Change the color of links on hover */
.topnav a:hover {
  background-color: #ddd;
  color: black;
}

/* Add a color to the active/current link */
.topnav a.active {
  background-color: #4CAF50;
  color: white;
}

</style>
</head>
<body>
  
<div class="topnav">

<a href="/home"> Lista de pendencias</a>
<a href="/registrar"> Registrar - se</a>
<a href="/cad_ugb"> Cadastro UGB</a>
<a href="/cad_origem"> Origem</a>


</div>

<body>
  <div class="container">
    <h2>Listagem de dimensões</h2>
    
    <button class="btn btn-sm btn-success" data-toggle="modal" id="btadd" data-target="#myModalAdd">Adicionar</button> 
    <table class='filterable table' id="mytable">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nome</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
         {{#each dimensao}}
        <tr>
          <td>{{ id_dimensao }}</td>
          <td>{{ nome_dimensao }}</td>
          <td>
            
            <a href="javascript:void(0);" class="btn btn-sm btn-info edit" data-id_dimensao="{{ id_dimensao }}" data-nome_dimensao="{{ nome_dimensao }}">Edit</a>
            <a href="javascript:void(0);" class="btn btn-sm btn-danger delete" data-id_dimensao="{{ id_dimensao }}">Apagar</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

 

    <!-- Modal adicionar dimensao -->
  <form action="/cadastro_dim" method="post">
  <div class="modal" id="myModalAdd" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Cadastrar dimensao</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
             <div class="modal-body">
               <div class="form-group">
                    <label>Nome da dimensao:</label>
                   <input type="text" name="nome_dimensao" class="form-control" placeholder="Nome da dimensao..." required>
               </div>
             
             <div class="modal-footer">
               <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
               <button type="submit" class="btn btn-primary">Salvar</button>
             </div>
             
           </div>
         </div>
        </div>
      </div>
      </div>
     </form>

    
 
     <!-- Modal Editar dimensao-->
   <form action="/edit_dim" method="post">
       <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Editar</h5>
              <button type="button" class="Fechar" data-dismiss="modal" aria-label="Fechar">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div class="form-group">
                  <label>Nome da dimensao: </label>
                  <input type="text" name="nome_dimensao" class="form-control nome_dimensao" placeholder=" " required>
              </div>
            </div>
            <div class="modal-footer">
              <input type="hidden" name="id_dimensao"class="form-control id_dimensao">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
              <button type="submit" class="btn btn-primary">Editar</button>
            </div>
          </div>
        </div>
       </div>
  </form>
 
     <!-- Modal Deletar-->
      <form id="add-row-form" action="/del_dim" method="post">
         <div class="modal fade" id="ApagarModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
               <div class="modal-content">
                   <div class="modal-header">
                                        <h5 class="modal-title" id="myModalLabel">Deletar</h5>
                      <button type="button" class="Fechar" data-dismiss="modal" aria-label="Fechar"><span aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                    <strong>Tem certeza que deseja apagar?</strong>
                    </div>
                    <div class="modal-footer">
                        <input type="hidden" name="id_dimensao" class="form-control id_dimensao" required>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                        <button type="submit" class="btn btn-success">Apagar</button>
                   </div>
                </div>
            </div>
         </div>
     </form>


  <!-- Alerta Erros -->
<div class="modal" id="ErroModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="myModalLabel">Mensagem do Sistema</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">
        <strong id="MensagemErro">{{ erro }}</strong>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-warning" data-dismiss="modal">Fechar</button>
      </div>
    </div>
  </div>
</div>



<script
  src="https://code.jquery.com/jquery-3.4.1.js"
  integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
  crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<script src="/assets/js/jquery.filtertable.min.js" type="text/javascript"></script>
<script src="/assets/js/chosen.jquery.min.js" type="text/javascript"></script>
<script src="/assets/js/sorttable.js" type="text/javascript"></script>
<script>
    $(document).ready(function(){
      $('.chosen-select').chosen({width: '100%'});
            //showing data to edit modal      
        $('#mytable').on('click','.edit',function(){
        var id_dimensao = $(this).data('id_dimensao');
        var nome_dimensao = $(this).data('nome_dimensao');
        $('#EditModal').modal('show');
        $('.nome_dimensao').val(nome_dimensao);
        $('.id_dimensao').val(id_dimensao);
      });
            //showing Apagar record modal
        $('#mytable').on('click','.delete',function(){
        var id_dimensao = $(this).data('id_dimensao');
        $('#ApagarModal').modal('show');
        $('.id_dimensao').val(id_dimensao);
      });
 
    });

    </script>

</body>
</html>