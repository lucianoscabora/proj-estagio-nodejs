<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Farol TIX</title>
 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">


  <style>
    h2, th, tr, td {
      text-align: center;
    }

    #btadd {
      position: absolute;
      top: 60;
      left: 944;
    }

/* Add a black background color to the top navigation */
.topnav {
  background-color: #333;
  overflow: hidden;
}

/* Style the links inside the navigation bar */
.topnav a {
  float: left;
  color: #f2f2f2;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}

/* Change the color of links on hover */
.topnav a:hover {
  background-color: #ddd;
  color: black;
}

/* Add a color to the active/current link */
.topnav a.active {
  background-color: #4CAF50;
  color: white;
}

</style>
</head>
<body>
  
<div class="topnav">

<a class="btn btn-success" href="/home">Lista de pendências</a>
<a href="/cad_ugb"> Cadastro UGB</a>
<a href="/cad_origem"> Origem</a>


</div>

<body>
  <div class="container">
    <h2>Farol</h2>
    
    <button class="btn btn-success" data-toggle="modal" id="btadd" data-target="#myModalAdd">Adicionar</button> 
    <table class='table table-bordered' id="mytable">
      <thead>
        <tr>
          <th>ID</th>
          <th>Dimensão</th>
          <th>Tipo do indicador</th>
          <th>Nome do indicador</th>
          <th>Ano indicador</th>
          <th>Meta mensal</th>
          <th>Valor real</th>
          <th>Mês</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
         {{#each farol}}
        <tr>
          <td>{{id_farol}}</td>
          <td>{{ nome_dimensao }}</td>
          <td>{{ tipo_indicador }}</td>
          <td>{{ nome_indicador }}</td>
          <td>{{ ano_indicador }}</td>
          <td class="meta" id="meta"> {{meta_mes}} </td>
          <td class="real" id="real"> {{valor_real}} </td>
          <td> {{mes}} </td>
          <td>
            
            <a href="javascript:void(0);" class="btn btn-sm btn-info edit" data-nome_indicador="{{ nome_indicador }}" data-tipo_indicador="{{ tipo_indicador }}"
            data-nome_indicador="{{ nome_indicador }}" data-ano_indicador="{{ ano_indicador }}" data-meta_mes="{{ meta_mes }}"
            data-valor_real="{{valor_real}}" data-mes="{{ mes }}"> Edit</a>
            <a href="javascript:void(0);" class="btn btn-sm btn-danger delete" data-id_indicador="{{ id_indicador }}">Apagar</a>
            <a href="javascript:void(0);" class="updValor" data-id_farol="{{id_farol}}" data-valor_real="{{ valor_real }}">Valor real</a>

          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

 

    <!-- Modal adicionar indicador -->
  <form action="/cadastro_farol" method="post">
  <div class="modal" id="myModalAdd" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Cadastrar farol</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
             <div class="modal-body">

                 <div><label>Escolha a dimensão: </label></div>
            <div class="form-group">
            <select id="id_dimensao" name="id_dimensao" class="chosen-select">
              {{#each dimensao}}
              <option value="{{ id_dimensao }}"> {{ nome_dimensao }}</option>
              {{/each}}
            </select>
            </div>


               <div><label>Escolha um indicador: </label></div>
            <div class="form-group">
            <select id="id_indicador" name="id_indicador" class="chosen-select">
              {{#each indicadores}}
              <option value="{{ id_indicador }}"> {{ nome_indicador }}</option>
              {{/each}}
            </select>
            </div>

             <div><label>Escolha um movimento: </label></div>
            <div class="form-group">
            <select id="id_movimento" name="id_movimento" class="chosen-select">
              {{#each movimentos}}
              <option value="{{ id_movimento }}"> {{ id_movimento }}</option>
              {{/each}}
            </select>
            </div>
        
             <div class="modal-footer">
               <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
               <button type="submit" class="btn btn-primary">Salvar</button>
             </div>
             
           </div>
         </div>
        </div>
      </div>
      </div>
     </form>

    
 
     <!-- Modal Editar UG-->
   <form action="/edit_ug" method="post">
       <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Editar</h5>
              <button type="button" class="Fechar" data-dismiss="modal" aria-label="Fechar">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div class="form-group">
                  <label>Nome da ug: </label>
                  <input type="text" name="nome_ug" class="form-control nome_ug" placeholder=" " required>
              </div>

              <label>Descrição da Ug</label>
              <div class="form-group">
                  <input type="text" name="dscr_ug" class="form-control dscr_ug" placeholder=" " required>
              </div>

               <div><label>Escolha o dono da UG: </label></div>
          <div class="form-group">
            <select id="dono_ug" name="dono_ug" class="chosen-select">
              {{#each users}}
              <option value="{{ id_usuario }}"> {{ nome_usuar }}</option>
              {{/each}}
            </select>
          </div>

            </div>
            <div class="modal-footer">
              <input type="hidden" name="id_ug" class="id_ug">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
              <button type="submit" class="btn btn-primary">Editar</button>
            </div>
          </div>
        </div>
       </div>
  </form>

  
  </form>
 
     <!-- Modal Deletar-->
      <form id="add-row-form" action="/del_ug" method="post">
         <div class="modal fade" id="ApagarModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
               <div class="modal-content">
                   <div class="modal-header">
                                        <h5 class="modal-title" id="myModalLabel">Deletar</h5>
                      <button type="button" class="Fechar" data-dismiss="modal" aria-label="Fechar"><span aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                    <strong>Tem certeza que deseja apagar?</strong>
                    </div>
                    <div class="modal-footer">
                                            <input type="hidden" name="id_ug" class="form-control id_ug" required>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                        <button type="submit" class="btn btn-success">Apagar</button>
                   </div>
                </div>
            </div>
         </div>
     </form>


  <!-- Alerta Erros -->
<div class="modal" id="ErroModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="myModalLabel">Mensagem do Sistema</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">
        <strong id="MensagemErro">{{ erro }}</strong>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-warning" data-dismiss="modal">Fechar</button>
      </div>
    </div>
  </div>
</div>

<!-- Editar valor real-->
<form action="/updValor" method="post">
  <div class="modal" id="updValorModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Digite o valor real: </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">
          

          <div class="form-group">
        <textarea class="form-control purple-border" id="upd_valor_real" name="valor_real" rows="3"></textarea>
      </div>    
         
        </div>
        <div class="modal-footer">
          <input type="hidden" id="upd_valor" name="id_farol" class="form-control" required>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
          <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
      </div>
    </div>
  </div>
</form>



<script
  src="https://code.jquery.com/jquery-3.4.1.js"
  integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
  crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<script src="/assets/js/jquery.filtertable.min.js" type="text/javascript"></script>
<script src="/assets/js/chosen.jquery.min.js" type="text/javascript"></script>
<script src="/assets/js/sorttable.js" type="text/javascript"></script>

<script>
    $(document).ready(function(){
            //showing data to edit modal      
        $('#mytable').on('click','.edit',function(){
        var id_ug = $(this).data('id_ug');
        var nome_ug = $(this).data('nome_ug');
        var dscr_ug = $(this).data('dscr_ug');
        $('#EditModal').modal('show');
        $('.nome_ug').val(nome_ug);
        $('.dscr_ug').val(dscr_ug);
        $('.id_ug').val(id_ug);
      });
            //showing Apagar record modal
        $('#mytable').on('click','.delete',function(){
        var id_ug = $(this).data('id_ug');
        $('#ApagarModal').modal('show');
        $('.id_ug').val(id_ug);
      });
 
    });

    $('#mytable').on('click', '.updValor', function (e) {
      $('#upd_valor').val($(this).data('id_farol'));
      $('#upd_valor_real').val($(this).data('valor_real'));
      $('#updValorModal').modal('show');
    });


    </script>


    <script>

      $('.chosen-select').chosen({width: '100%'});

    </script>   


